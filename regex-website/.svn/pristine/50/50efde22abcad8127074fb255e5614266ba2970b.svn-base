			      			<td rowspan="2">${classBMap[data.classb]}</td>
			      			<#elseif data_index == 8>
			      			<td>${classBMap[data.classb]}</td>
			      		</#if>
				      <td>${data.item}</td>
			      		<td>${typeMap[data.type]}</td>
