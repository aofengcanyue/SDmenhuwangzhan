				      <th class="td_blue">分值</th>
				      <th class="td_blue">得分</th>
				    </tr>
				  </thead>
				  <tbody id="data_1" class="data_table11" >
				  	<#list datas1 as data>
			      	<tr>
			      		<#if data_index == 0>
			      		  <td rowspan="9">${classBMap[data.classb]}</td> 
			      		<#elseif data_index == 9>
			      			<td rowspan="2">${classBMap[data.classb]}</td>
			      		<#elseif data_index == 11>
			      			<td rowspan="2">${classBMap[data.classb]}</td>
			      		</#if>
				      <td>${data.item}</td>
				      <#if data_index == 0>
			      		  <td rowspan="4">${typeMap[data.type]}</td> 
			      		<#elseif data_index == 4>
			      			<td rowspan="5">${typeMap[data.type]}</td>
			      		<#elseif data_index == 9>
			      			<td rowspan="2">${typeMap[data.type]}</td>
			      		<#elseif data_index &gt; 10>
			      		<td>${typeMap[data.type]}</td>
			      		</#if>
				      <td >${data.point}</td>
				      <td >
				      	<#if data_index == 0>${evaluationOneDTOTmp.valueOne}
				      	<#elseif data_index == 1>${evaluationOneDTOTmp.valueTwo}
				      	<#elseif data_index == 2>${evaluationOneDTOTmp.valueThree}
				      	<#elseif data_index == 3>${evaluationOneDTOTmp.value}
