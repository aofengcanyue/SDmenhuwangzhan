</div>

<!--  弹窗 -->

	
	
</body>

<script src="${resRoot}/project/js/bootstrap.min.js"></script>
<script src="${resRoot}/project/js/js.js"></script>
<script>
function changeValue() {
	var type = $("#type").val();
	if(type!= "") {
		$(".data_table11").hide();
		$("#data_"+type).show();
	} else {
		$(".data_table11").show();
	}
}
</script>

</html>

