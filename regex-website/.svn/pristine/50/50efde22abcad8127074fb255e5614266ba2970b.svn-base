				      </td>
				    </tr>
			      </#list>
				  </tbody>
				  
				  <tbody id="data_4" class="data_table11" >
				  	<#list datas4 as data>
			      	<tr>
			      		<#if data_index == 0>
			      		  <td rowspan="2">${classBMap[data.classb]}</td> 
			      		<#elseif data_index == 2>
