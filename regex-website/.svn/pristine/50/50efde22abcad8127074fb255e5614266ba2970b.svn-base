				      	</#if>
				      </td>
				    </tr>
			      </#list>
				  </tbody>
				  
				  <tbody id="data_5" class="data_table11" >
				  	<#list datas5 as data>
			      	<tr>
			      		<#if data_index &lt; 5>
			      		  <td>${classBMap[data.classb]}</td> 
			      		<#elseif data_index == 5>
			      			<td rowspan="4">${classBMap[data.classb]}</td>
			      		</#if>
				      <td>${data.item}</td>
			      		<td>${typeMap[data.type]}</td>
				      <td >${data.point}</td>
				      <td >
				      	<#if data_index == 0>${evaluationFiveDTOTmp.valueOne}
				      	<#elseif data_index == 1>${evaluationFiveDTOTmp.valueTwo}
				      	<#elseif data_index == 2>${evaluationFiveDTOTmp.valueThree}
				      	<#elseif data_index == 3>${evaluationFiveDTOTmp.value}
