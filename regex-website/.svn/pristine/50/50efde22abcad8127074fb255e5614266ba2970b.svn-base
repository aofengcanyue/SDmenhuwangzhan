			      			<td rowspan="2">${classBMap[data.classb]}</td>
		      			<#elseif data_index == 6>
			      			<td rowspan="2">${classBMap[data.classb]}</td>
			      		</#if>
				      <td>${data.item}</td>
			      		<td>${typeMap[data.type]}</td>
				      <td >${data.point}</td>
				      <td >
				      	<#if data_index == 0>${evaluationFourDTOTmp.valueOne}
				      	<#elseif data_index == 1>${evaluationFourDTOTmp.valueTwo}
				      	<#elseif data_index == 2>${evaluationFourDTOTmp.valueThree}
