				      	<#elseif data_index == 5>${evaluationFiveDTOTmp.valueSix}
				      	<#elseif data_index == 6>${evaluationFiveDTOTmp.valueSeven}
				      	<#elseif data_index == 7>${evaluationFiveDTOTmp.valueEight}
				      	<#elseif data_index == 8>${evaluationFiveDTOTmp.valueNine}
				      	</#if>
				      </td>
				    </tr>
			      </#list>
				  </tbody>
				  
				  <tbody id="data_6" class="data_table11" >
				  	<#list datas6 as data>
			      	<tr>
			      		<#if data_index == 0>
			      		  <td rowspan="4">${classBMap[data.classb]}</td> 
			      		<#elseif data_index == 4>
			      			<td rowspan="6">${classBMap[data.classb]}</td>
			      		<#elseif data_index == 10>
