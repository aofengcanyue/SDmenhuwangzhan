			      			<td rowspan="4">${classBMap[data.classb]}</td>
			      		</#if>
				      <td>${data.item}</td>
			      	  <td>${typeMap[data.type]}</td>
				      <td >${data.point}</td>
				      <td >
				      	<#if data_index == 0>${evaluationSixDTOTmp.valueOne}
