function saveIndex4() {
	var point4Arr = "";
	var itemIdArr = "";
	var flag = true;
$("input[name='point4']").each(function(index,item){
	var tmpPoint = $(this).val();
	if(flag && (tmpPoint == "" || tmpPoint == null || tmpPoint =="undefined")) {
		alert("请选择输入分数！")
		flag=false;
		return false;
	} else {
		var inputPoint = parseFloat(tmpPoint);
		var point = parseFloat($(this).attr("point"));
		if(inputPoint > point) {
			$(this).val(point);
		}
	point4Arr = point4Arr + $(this).val() + "#";
	itemIdArr = itemIdArr + $(this).attr("itemId") + "#";
	}
	 });
if(flag) {
	$.ajax({
		type : "post",
		url : "${base}/web/greenPark/saveIndex4.htm",
		data : {
			point4Arr : point4Arr,
			itemIdArr : itemIdArr
			},
		dataType : "json",
		async : false,
		success : function(data) {
			if(data.message == 2) {
				layer.alert('请完善数据');   
					// return false;
				} else if(data.message == 1) {
					layer.msg('保存成功！', {
					  icon: 1,
					  time: 2000 //2秒关闭（如果不配置，默认是3秒）
					}, function(){
						window.location.href="${base}/web/greenPark/index5.htm";
					});   
				} else {
					layer.msg('系统繁忙！'); 
				}
		}
	}); 
}
}
</script>
